            </table>
          </div>
        </form>
      </section>

    <section id="seat">
      <div id="planeName" class="page">
        <h1>plane name</h1>
      </div>  
    </section>

    <div id="table" class="flight-seat"></div>
    
    <script>
    $("#table").hide();

    $(".submit").click( function()
      {
        alert("gg");
         // choice = this.id; 
         //  $(".selection").html("Your choice: <h1>" + choice + "</h1>");
         //  $("#reservation-form").show();
         //  $("#seatInput").val(choice);
         makeTable();
         $("#planeName").html("<h1>" + $("#nameInput").val() + "</h1>");
         $("#table").show();
      });
      var makeTable = function(){
          var alphabet = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
          var rows = $("#rows").val()  || 1;      //1-30
          var columns = $("#columns").val()  || 1;   //A-H
          var result = "";
          result += "<table class='table4'>";

          result += "<thead>";
          result += "<tr>";
          result +="<td></td>";
          for (var x = 0; x < columns; x++) {
            result += "<td>";
            result += alphabet[x];
            result += "</td>";  
          }    
          result += "</tr>";
          result += "</thead>"

          result += "<tbody>";
          for (var y = 0; y < rows; y++) {
            result += "<tr>"; 
            result += "<td>";
            result += y+1;
            result += "</td>"; 
          for (var x = 0; x < columns; x++) {
              result += "<td>";
              result += "<button class='reserved'><span>"
              result += "avail";
              result += "</span></button>"
              result += "</td>";
            }
            result += "</tr>";
          }
          result += "</tbody>";
          result += "</table>";
          $('#table').html(result);
          console.log(result);
      } 
  </script>
