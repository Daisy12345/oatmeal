
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>oatmeal</title>

</head>
<body>
<div id="plane-page">
  <section id="airlineapp">
      <header id="header">
      <table class="table">
        <thead>
          <tr>
          <th><a href="">Planes</a></th>
          <th><a href="/flights">Flights</a></th>
          <th><a href="">Admin</a></th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
      </header>

    <section id="main" class="main">
      <table class="table1">
        <thead>
          <tr class="th">
          <th class="title">Oatmeal Airlines</th>
          <th><button class="submit">Create Flight</button></th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
      </section>

      <section id="content">
        <form class="plane-form">
          <div class="box">
            <table class="table2">
              <thead></thead>
              <tbody>
              <tr>
                <td><input name="name" type="text" placeholder="name" class="text"/></td>
                <td><input name="rows" type="text" placeholder="rows" class="text"/></td>
                <td><input name="columns" type="text" placeholder="cols" class="text"/></td>
                <td></td>
              </tr>
              <tr>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td colspan="2"><button class="cancel-button">Cancel</button><span class="space"/><button class="submit" type="submit">Save</button></td>

              </tr>       
              </tbody>
            </table>
          </div>
        </form>
      </section>

    <section id="seat">
      <div class="page">
        <h1>plane name</h1>
      </div>  
    </section>

      <footer id="footer">
        
      </footer>
  </section>
</div>
</body>
</html>



