<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>oatmeal</title>
</head>
<body>
<div id="flight-page">
  <section id="airlineapp">
      <header id="header">
      <table class="table">
        <thead>
          <tr>
          <th><a href="">Planes</a></th>
          <th><a href="/flights">Flights</a></th>
          <th><a href="">Admin</a></th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
      </header>

    <section id="main" class="main">
      <table class="table1">
        <thead>
          <tr class="th">
          <th class="title">Oatmeal Airlines</th>
          <th><button class="submit">Create Plane</button></th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
      </section>

      <section id="content">
          <form class="flight-form">
            <div class="box">
              <table class="table2">
                <thead></thead>
                <tbody>
                  <tr>
                    <td><input name="number" type="text" placeholder="flight" class="text"/></td>
                    <td><input name="plane" type="text" placeholder="plane" class="text"/></td>
                    <td><input name="date" type="text" placeholder="date" class="text"/></td>
                  </tr>
                  <tr>  
                    <td><input name="from" type="text" placeholder="from" class="text"/></td>
                    <td><input name="to" type="text" placeholder="to" class="text"/></td>
                    <td colspan="2"><button class="cancel-button">Cancel</button><span class="space"/><button class="submit">Save</button></td>
                  </tr>       
                </tbody>
              </table>
            </div>
        </form>
      </section>

    
      <div class="page">
          <table class="flight-list">
            <tr>
              <td><h1>Date</h1></td>
              <td><h1>Flight<h1></td>
              <td><h1>From>To</h1></td>
              <td><h1>Plane</h1></td>
              <td><h1>Seats</h1></td>
          </tr>
          </table>
      </div>
  </section>

</div>
</body>
</html>


