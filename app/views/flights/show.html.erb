  	 var flight1 = new oatmeal.Flight({number: "<%= @flight.number %>",
  	 	 numberOfSeats: "<%= @flight.plane.numberOfSeats %>",
  	 	 origin: "<%= @flight.origin %>",
  	 	 destination: "<%= @flight.destination %>",
  	 	 availableSeatsNumber: "<%= @flight.availableSeatsNumber %>",
