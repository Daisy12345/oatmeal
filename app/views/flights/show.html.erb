    result += "</tr>";
    result += "</thead>"

    result += "<tbody>";
    for (var y = 0; y < rows; y++) {
      result += "<tr>"; 
      result += "<td>";
      result += y+1;
      result += "</td>"; 
    for (var x = 0; x < columns; x++) {
        result += "<td>";
        result += "<button class='reserved' id=" + (y + 1) + alphabet[x] + "><span>"
        result += "avail";
        result += "</span></button>"
        result += "</td>";
      }
      result += "</tr>";
    }
    result += "</tbody>";
    result += "</table>";
    $('#seat-table').html(result);
    console.log(result);

    for(var j = 0; j < rSeats.length; j++){
    	$("#"+rSeats[j]).hide();
    }
